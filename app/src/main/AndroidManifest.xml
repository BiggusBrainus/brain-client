<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.htlkaindorf.bigbrain">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BigBrain"
        android:usesCleartextTraffic="true">
        <activity android:name=".gui.CreateLobbyActivity"></activity>
        <activity android:name=".gui.GameFinishActivity"></activity>
        <activity android:name=".gui.RankingActivity"></activity>
        <activity android:name=".gui.WaitingRoomActivity"></activity>
        <activity android:name=".gui.AllLobbiesActivity"></activity>
        <activity android:name=".gui.RegisterActivity"></activity>
        <activity android:name=".gui.LoginActivity"></activity>
        <activity android:name=".gui.UserActivity"></activity>
        <activity android:name=".gui.SettingsActivity"></activity>
        <activity android:name=".gui.GameActivity"></activity>
        <activity android:name=".gui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>